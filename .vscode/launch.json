    "version": "0.2.0",
    "configurations": [
        {
            "name": "SfM_App",
            "type": "cppdbg","windows": {},
            "request": "launch",
            "program": "${workspaceFolder}/SfM_App.out",
            "args": [
            //--------------------------------- BASE --------------------------------//
              "-bSource=/home/lowcash/Documents/SfM_Resources/Video/vid_10.mp4", 
              //"-bSource=https://192.168.1.100:8080/video", 
              "-bcalib=/home/lowcash/Documents/SfM_Resources/Calibration/mobile_cam_calib_1.yml", "-bDownSamp=0.25", "-bUseCuda=false", "-bUseOptFl=true",
            
            //------------------------------- FEATURES ------------------------------//
            "-fDecType=AKAZE", "-fMatchType=BRUTEFORCE_HAMMING", "-fKnnRatio=0.75",

            //----------------------------- OPTICAL FLOW ----------------------------//
            "-ofMinKPts=20", "-ofWinSize=21", "-ofMaxLevel=5", "-ofMaxItCt=100", "-ofItEps=0.01", "-ofMaxError=25.0", "-ofMaxCorn=2000", "-ofQualLvl=0.1", "-ofMinDist=0",
            
            //--------------------------- POSE ESTIMATION ---------------------------//
            "-peMethod=RANSAC", "-peProb=0.95", "-peThresh=1.0", "-peMinInl=5",

            //---------------------------- TRIANGULATION ----------------------------//
            "-tMinDist=0.0001", "-tMaxDist=100", "-tMaxPErr=1"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "linux": {
                "MIMode": "gdb",
                "includePath": ["/usr/include"],
                "setupCommands": [
                  {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                  }
                ]
            },
        }
    ]
}