              //"-fDecType=SIFT", "-fMatchType=FLANNBASED", "-fKnnRatio=0.5",
              //"-fDecType=SURF", "-fMatchType=FLANNBASED", "-fKnnRatio=0.5",
              //"-fDecType=STAR", "-fMatchType=BRUTEFORCE_HAMMING", "-fKnnRatio=0.5",
              //"-fDecType=BRISK", "-fMatchType=BRUTEFORCE_HAMMING", "-fKnnRatio=0.5",

              //----------------------------- OPTICAL FLOW ----------------------------//
              "-ofMinKPts=333", "-ofWinSize=30", "-ofMaxLevel=7", "-ofMaxItCt=500", "-ofItEps=0.01", "-ofMaxError=10.0", "-ofMaxCorn=2000", "-ofQualLvl=0.1", "-ofMinDist=25",
              
              //--------------------------- POSE ESTIMATION ---------------------------//
              "-peMethod=RANSAC", "-peProb=0.95", "-peThresh=1.0", "-peMinInl=10", "-peMinMatch=10", "-pePMetrod=SOLVEPNP_P3P", "-peExGuess=false", "-peNumIteR=500",
