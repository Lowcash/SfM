{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
      {
          "name": "SfM_App",
          "type": "cppdbg","windows": {},
          "request": "launch",
          "program": "${workspaceFolder}/SfM_App.out",
          "args": [
          //--------------------------------- BASE --------------------------------//
            // "-bSource=/home/lowcash/Documents/SfM_Resources/Video/matches.mkv", 
            // "-bcalib=/home/lowcash/Documents/SfM_Resources/Calibration/calib_blender.yml",
            "-bcalib=/home/lowcash/Documents/SfM_Resources/Calibration/calib_mobile.yml",
            "-bSource=/home/lowcash/Documents/SfM_Resources/Video/gramofony.mp4", 
            //"-bSource=https://192.168.1.100:8080/video", 
            //"-bcalib=/home/lowcash/Documents/SfM_Resources/Calibration/calib_KITTI_0.yml", 
            "-bDownSamp=3.0", "-bWinWidth=960", "-bWinHeight=540", "-bUseMethod=KLT", "-bMaxSkFram=10", "-bDebugVisE=true", "-bDebugMatE=true",
          
            //------------------------------- FEATURES ------------------------------//
            //"-fDecType=ORB", "-fMatchType=BRUTEFORCE_HAMMING", "-fKnnRatio=0.5",
            "-fDecType=AKAZE", "-fMatchType=BRUTEFORCE_HAMMING", "-fKnnRatio=0.5",
            //"-fDecType=FAST", "-fMatchType=BRUTEFORCE_HAMMING", "-fKnnRatio=0.5",
            //"-fDecType=SIFT", "-fMatchType=FLANNBASED", "-fKnnRatio=0.5",
            //"-fDecType=SURF", "-fMatchType=FLANNBASED", "-fKnnRatio=0.5",
            //"-fDecType=STAR", "-fMatchType=BRUTEFORCE_HAMMING", "-fKnnRatio=0.5",
            //"-fDecType=BRISK", "-fMatchType=BRUTEFORCE_HAMMING", "-fKnnRatio=0.5",

            //----------------------------- OPTICAL FLOW ----------------------------//
            "-ofMinKPts=333", "-ofWinSize=30", "-ofMaxLevel=5", "-ofMaxItCt=250", "-ofItEps=0.01", "-ofMaxError=10.0", "-ofMaxCorn=2000", "-ofQualLvl=0.01", "-ofMinDist=5",
            
            //--------------------------- POSE ESTIMATION ---------------------------//
            "-peMethod=RANSAC", "-peProb=0.99", "-peThresh=1.0", "-peMinInl=25", "-peMinMatch=25", "-pePMetrod=SOLVEPNP_EPNP", "-peExGuess=false", "-peNumIteR=500",
            //"-peMethod=RANSAC", "-peProb=0.99", "-peThresh=1.0", "-peMinInl=25", "-peMinMatch=50", "-pePMetrod=SOLVEPNP_P3P", "-peExGuess=false", "-peNumIteR=250",
            
            //-------------------------- BUNDLE ADJUSTMENT --------------------------//
            "-baMethod=DENSE_SCHUR", "-baMaxRMSE=5.0", "-baProcIt=1",

            //---------------------------- TRIANGULATION ----------------------------//
            "-tMethod=ITERATIVE", "-tMinDist=0.0001", "-tMaxDist=9999", "-tMaxPErr=5",

            //----------------------------- CLOUD FILTER ----------------------------//
            "-cSRemThr=1.0", "-cLSize=0.0", "-cSRange=3", "-cFProcIt=5"
          ],
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}",
          "environment": [],
          "externalConsole": false,
          "linux": {
              "MIMode": "gdb",
              "includePath": ["/usr/include"],
              "setupCommands": [
                {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
                }
              ]
          },
      }
  ]
}